<h1 class="text-center mt-4 mb-4">Edit Comment</h1>
<div class="container">
  <form
    action="/articles/<%= slug %>/comments/<%= comment._id %>?_method=PUT"
    method="POST"
  >
    <div class="form-group">
      <input
        type="text"
        name="text"
        class="form-control"
        value="<%= comment.text  %> "
        required
      />
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">Post Comment</button>
    </div>
  </form>
  <a href="/articles/<%= slug %> ">Go Back</a>
</div>
