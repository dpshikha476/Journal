
<div class="text-center container" style="height: 15%; ">
  <div class="row justify-content-center align-items-center">
    <div class="col headingm">
      <h1 style="font-family: 'Kaushan Script', cursive; font-weight: bolder; color: rgb(2, 17, 41);">Promising Pages</h1>
      <p> "Words are our most inexhaustible source of magic."
          <br> <span>- J. K. Rowling</span></p>
    </div>
    <div class="col photu">
     <img src="/imgs/pic.png" alt="">
    </div>
  </div>
</div>

<h1 class="text-center mt-4 main-head">Latest Posts</h1>

<% articles.forEach((article) => { %>
<div class="card mt-4 mb-4">
  <div class="card-body">
    <h1 class="card-title article-title"><%= article.title %></h1>
    <p class="user">
      <i class="fas fa-user-circle mr-1"></i><%= article.author.username %>
    </p>
    <p class="read-time"></p>

    <div class="card-subtitle text-muted mb-2">
      <i class="far fa-calendar-alt mr-2"></i>
      <%= article.createdAt.toLocaleDateString() %>
    </div>
    <div class="card-text mb-3">
      <%= article.markdown.substring(0,100) %>...
    </div>
    <a href="/articles/<%= article.slug %> " class="btn btn-outline-success"
      >Read More</a
    >
  </div>
</div>

<% }) %>
